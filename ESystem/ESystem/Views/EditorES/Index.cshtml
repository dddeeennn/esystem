@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактор  экспертной системы</h2>

<div class="form-horizontal col-sm-12">
    <div class="form-group">@Html.ActionLink("Посмотреть дерево вопросов", "DisplayQueTree", null, new { @class = "btn btn-primary" })</div>
    <div class="form-group">@Html.ActionLink("Добавить вопрос", "AddQuestion", null, new { @class = "btn btn-primary" })</div>
    <div class="form-group">@Html.ActionLink("Редактировать существующий вопрос", "EditExistingQuestion", null, new { @class = "btn btn-primary" })</div>
    <div class="form-group">@Html.ActionLink("Редактировать список вопросов", "ListQueEditor", null, new { @class = "btn btn-primary" })</div>
    <div class="form-group">@Html.ActionLink("Редактировать список предметов", "ListSubjEditor", null, new { @class = "btn btn-primary" })</div>
</div>
