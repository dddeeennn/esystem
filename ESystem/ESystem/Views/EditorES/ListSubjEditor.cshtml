@model List<ESystem.Infrastructure.Subject>

@{
    ViewBag.Title = "Редактор списка предметов";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Список предметов</h2>
<div class="form-horizontal">
    <div class="form-group col-sm-12">
        @Html.ActionLink("Назад...", "Index", null, new { @class = "btn btn-primary" })
    </div>
    <table class="table">
        <thead>
            <th class="col-sm-1">Номер предмета</th>
            <th class="col-sm-10">Предмет</th>
            <th class="col-sm-1" title="удалить элемент"><span class="glyphicon glyphicon-trash"></span></th>
        </thead>
        <tbody>
            @foreach (var subj in Model)
            {
                <tr data-id="@subj.Id" data-parent="@subj.ParentId">
                    <td>@subj.Id</td>
                    <td class="dynamic-content">@subj.Data</td>
                    <td><a data-url="@Url.Action("RemoveNode", new { id = subj.Id })" class="remove-node glyphicon glyphicon-remove"></a></td>
                </tr>    
            }
        </tbody>
    </table>
</div>
<script type="text/javascript" src="/Scripts/tableEditor.js"></script>
