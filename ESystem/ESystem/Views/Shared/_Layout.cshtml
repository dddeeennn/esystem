<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>ESystem</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet"/>
    <link href="@Url.Content("~/Content/font-awesome.css")" rel="stylesheet"/>
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.js")"></script>
</head>
<body>
    <header style="min-height: 70px;">
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("Домой...", "Index", "Home")</p>
            </div>
            <div class="float-right">
                @*<section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>*@
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Редактор ЭС", "Index", "EditorES")</li>
                        <li>@Html.ActionLink("Экспертная Система", "Index", "DisplayES")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - ESystem</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
