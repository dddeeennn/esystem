@using EGCad.Common.Infrastructure.MVC
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>EGCad</title>
	@Styles.Render("~/Content/css")
	<link rel="stylesheet" href="/content/Layout.css" />
	<link rel="stylesheet" href="/content/Common.css" />
	<script type="text/javascript" src="/Scripts/jquery-2.1.1.js"></script>
	@Scripts.Render("~/bundles/modernizr")
	<script type="text/javascript" src="/Scripts/app.js"></script>
	<script type="text/javascript" src="/Scripts/DataProvider.js"></script>
	<script type="text/javascript" src="/Scripts/DataRequest.js"></script>
	<script type="text/javascript" src="/Scripts/DataSender.js"></script>
	<script type="text/javascript" src="/Scripts/UINotifier.js"></script>

</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand">
					<span>EGCad</span>
					<sup>
						<span>v. @Html.GetVersion()</span>
					</sup>
				</a>
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					@if (@User.Identity.IsAuthenticated)
					{
						<li>@Html.ActionLink("Расчет сгущения опробации сети", "Index", "Map")</li>
						@*<li>@Html.ActionLink("О проекте", "About", "Home")</li>*@
					}
				</ul>
				@Html.Partial("_LoginPartial")
			</div>
		</div>
	</div>
	<div class="body-content">
		@RenderBody()
	</div>
	<footer>
		<hr />
		<p>&copy; EGCad @DateTime.Now.Year</p>
	</footer>
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", false)
</body>
</html>

